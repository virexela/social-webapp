NODE_ENV=production

# MongoDB
MONGODB_URI=mongodb://127.0.0.1:27017/social
MONGODB_DB_NAME=social

# Relay websocket base URL (must point to social-backend)
NEXT_PUBLIC_RELAY_WS_URL=wss://relay.example.com/ws
# Backward-compatible alias (same value as above if used)
NEXT_PUBLIC_WS_URL=wss://relay.example.com/ws

# Web Push (VAPID)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=REPLACE_WITH_PUBLIC_KEY
VAPID_PUBLIC_KEY=REPLACE_WITH_PUBLIC_KEY
VAPID_PRIVATE_KEY=REPLACE_WITH_PRIVATE_KEY
VAPID_SUBJECT=mailto:admin@example.com
